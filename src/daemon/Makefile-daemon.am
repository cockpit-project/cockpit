libexec_PROGRAMS += cockpitd

lvm_dbus_built_sources = com.redhat.lvm2.h com.redhat.lvm2.c
# Split it like this so we don't get a race condition where both files are tried to be generated at the same time
com.redhat.lvm2.h : com.redhat.lvm2.c
com.redhat.lvm2.c : Makefile.am /usr/share/dbus-1/interfaces/com.redhat.lvm2.xml
	gdbus-codegen					\
		--interface-prefix com.redhat.lvm2 	\
		--c-namespace Lvm 			\
		--c-generate-object-manager 		\
		--generate-c-code com.redhat.lvm2 	\
		$(datadir)/dbus-1/interfaces/com.redhat.lvm2.xml \
		$(NULL)

# We compile the lvm glue into its own convenience library since we
# can't use the same CFLAGS for it as for cockpitd.  Specifically, we
# can't pass $(cockpit_cppflags_glib_version) since it would be wrong
# for the code generated by gdbus-codegen.

noinst_LTLIBRARIES += liblvmdbus.la
liblvmdbus_la_SOURCES = $(lvm_dbus_built_sources)
liblvmdbus_la_CFLAGS =					\
	$(cockpit_cppflags_common)			\
	-DG_LOG_DOMAIN=\"liblvmdbus\"			\
	$(GIO_CFLAGS)					\
	$(WARN_CFLAGS)					\
	$(NULL)

BUILT_SOURCES += $(lvm_dbus_built_sources)
CLEANFILES += $(lvm_dbus_built_sources)

