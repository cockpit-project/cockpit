#!/bin/bash

set -ex

if [ -z "$SUBSCRIPTION_PATH" ] && [ -e ~/.rhel/login ]; then
    SUBSCRIPTION_PATH=~/.rhel
fi

BASE=$(dirname $0)
# last URL for 8.0.0, later nightlies are for z-stream and have no images
$BASE/virt-install-fedora "$1" x86_64 "http://download.devel.redhat.com/rhel-8/nightly/RHEL-8/RHEL-8.0.0-20190415.n.0/compose/BaseOS/x86_64/os/" $SUBSCRIPTION_PATH
