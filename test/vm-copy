SELF=vm-copy
. ./testlib.sh

usage()
{
	echo >&2 "usage: $SELF [--machine=addr] SRC... DEST"
}

M=10.111.111.1

args=$(getopt -o "hm:" -l "help,machine:" -- "$@")
eval set -- "$args"
while [ $# -gt 0 ]; do
	case $1 in
	-m|--machine)
		M=$2
		shift
		;;
	-h|--help)
		usage
		exit 0
		;;
	--)
		shift
		break
		;;
	esac
	shift
done

if [ $# -lt 2 ]; then
  usage
  exit 1
fi

i=0
while [ $# -gt 1 ]; do
    srcs[$i]=$1
    i=$[$i+1]
    shift
done
dest=$1

chmod 600 ./identity
scp -i ./identity -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -r "${srcs[@]}" "root@$M:$dest"
