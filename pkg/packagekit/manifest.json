{
    "name": "updates",
    "priority": 0,
    "conditions": [
        {"path-exists": "/lib/systemd/system/packagekit.service"},
        {"path-not-exists": "/sysroot/ostree"}
    ],

    "tools": {
        "index": {
            "label": "Software updates",
            "docs": [
                {
                    "label": "Managing software updates",
                    "url": "https://docs.redhat.com/en/documentation/red_hat_enterprise_linux/10/html/managing_systems_in_the_rhel_web_console/getting-started-with-the-rhel-web-console"
                }
            ],
            "keywords": [
                {
                    "matches": ["package", "packagekit", "dnf", "yum", "apt-get", "security", "kpatch", "updates"]
                }
            ]
        }
    },

    "preload": [ "index" ]
}
