set -ex

if [ "$#" != 3 ]; then
    echo >&2 "Usage: fedora.build IMAGE OS ARCH"
    exit 1
fi

out=$1
os=$2
arch=$3
test -z "$BOOTSTRAP_VOLUME_SIZE" && BOOTSTRAP_VOLUME_SIZE="8G"

virt-builder "$os" \
             --output "$out" \
             --size $BOOTSTRAP_VOLUME_SIZE \
             --format qcow2 \
             --arch "$arch"
