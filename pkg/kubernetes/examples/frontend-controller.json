{
    "kind": "ReplicationController",
    "apiVersion": "v1beta3",

    "metadata": {
        "name": "frontendcontroller-ruby",
        "labels": {
            "name": "frontendcontroller-ruby",
            "template": "ruby-helloworld-sample"
        }
    },
    "spec": {
        "replicas": 3,
        "selector": {
            "name": "frontend-ruby"
        },
        "template": {
            "metadata": {
                "name": "frontend-1",
                "labels": {
                    "name": "frontend-ruby",
                    "template": "ruby-helloworld-sample"
                }
            },
            "spec": {
                "volumes": null,
                "containers": [
                {
                    "name": "ruby-helloworld",
                    "image": "openshift/ruby-hello-world",
                    "ports": [
                    {
                        "containerPort": 8080,
                        "protocol": "TCP"
                    }
                    ],
                    "env": [
                    {
                        "name": "ADMIN_USERNAME",
                        "key": "ADMIN_USERNAME",
                        "value": "admin6TM"
                    },
                    {
                        "name": "ADMIN_PASSWORD",
                        "key": "ADMIN_PASSWORD",
                        "value": "xImx1tHR"
                    },
                        {
                            "name": "MYSQL_ROOT_PASSWORD",
                            "key": "MYSQL_ROOT_PASSWORD",
                            "value": "rQHfVnTo"
                        },
                        {
                            "name": "MYSQL_DATABASE",
                            "key": "MYSQL_DATABASE",
                            "value": "root"
                        }
                    ],
                    "imagePullPolicy": "IfNotPresent",
                    "capabilities": {}
                }

                ],
                "restartPolicy": {
                    "always": {}
                },
                "dnsPolicy": "ClusterFirst"
            }

        }
    }
}		

