set -euf

auth=$(cat <&3)
success=0
case $auth in
    "failslow")
        sleep 2
        echo "{ \"error\": \"authentication-failed\" }" >&3
        ;;
    "fail")
        echo "{ \"error\": \"authentication-failed\" }" >&3
        ;;
    "denied")
        echo "{ \"error\": \"permission-denied\" }" >&3
        ;;
    "success")
        echo "{\"user\": \"me\" }" >&3
        success=1
        ;;
    "success-with-data")
        echo "{\"user\": \"me\", \"login-data\": { \"login\": \"data\"} }" >&3
        success=1
        ;;
    "success-bad-data")
        echo "{\"user\": \"me\", \"login-data\": \"bad\" }" >&3
        success=1
        ;;
    "no-user")
        echo "{ }" >&3
        ;;
    "with-error")
        echo "{ \"error\": \"unknown\", \"message\": \"detail for error\" }" >&3
        ;;
    *)
        ;;
esac

exec 3<&-

if [ $success -eq 1 ]; then
    exec cat
fi
