#! /bin/bash

. ./testlib.sh

external_test_data=${TEST_DATA:-$PWD}

# Download base tarball if necessary.

( cd "$external_test_data"
  tarball=$TEST_OS-$TEST_ARCH.tar.gz
  if [ ! -f $tarball ]; then
    echo "Downloading $tarball"
    curl -O "http://mvo.fedorapeople.org/cockpit/$tarball"
  fi
)

# Create new clean images in ./run

if ! ./vm-prep --check --nat; then
    sudo ./vm-prep --nat
fi

./vm-reset
./vm-create -v -f cockpit
./vm-create -v -f ipa

if ! ./vm-prep --check; then
    sudo ./vm-prep
fi

# Save them to ./images

unset TEST_DATA
./vm-save -f cockpit
./vm-save -f ipa

# Test them.

./vm-reset
./vm-install -f cockpit $(./make-rpms)
./check-verify

# Upload them

./vm-upload -f cockpit
./vm-upload -f ipa
