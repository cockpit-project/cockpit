import storagelib
import testlib


@testlib.nondestructive
class TestStorageMsDOS(storagelib.StorageCase):

    def testDosParts(self):
        b = self.browser

        self.login_and_go("/storage")

        # Add a disk
        disk = self.add_ram_disk()
        b.click(self.card_row("Storage", location=disk))

        # Format it with a DOS partition table
        b.click(self.card_button("Content", "Create partition table"))
        self.dialog({"type": "dos"})
        b.wait_text(self.card_row_col("Partitions", 1, 1), "Free space")

        # Create a primary partition
        b.clicks(self.dropdown_action(self.card_row("Partitions", 1), "Create partition"))
        self.dialog({"size": 10,
                     "type": "ext4",
                     "mount_point": "/foo",
                     "name": "FIRST"},
                    secondary=True)
        b.wait_text(self.card_row_col("Partitions", 1, 2), "ext4 filesystem")

        # Open dialog for formatting the primary partition and check that "dos-extended" is not offered.
        b.click(self.card_row("Partitions", 1))
        b.click(self.card_button("ext4 filesystem", "Format"))
        self.dialog_wait_open()
        b.wait_not_present("select option[value='dos-extended']")
        self.dialog_cancel()
        self.dialog_wait_close()
        b.click(self.card_desc("ext4 filesystem", "Stored on") + " button")

        # Create a extended partition to fill the rest of the disk
        b.clicks(self.dropdown_action(self.card_row("Partitions", 2), "Create partition"))
        self.dialog_wait_open()
        self.dialog_set_val("type", "dos-extended")
        self.dialog_wait_not_present("name")
        self.dialog_wait_not_present("mount_point")
        self.dialog_wait_not_present("mount_options")
        self.dialog_apply()
        self.dialog_wait_close()
        b.wait_text(self.card_row_col("Partitions", 2, 1), "Extended partition")
        b.wait_text(self.card_row_col("Partitions", 3, 1), "Free space")

        # Create logical partitions and check that "dos-extended" is
        # not offered.
        b.clicks(self.dropdown_action(self.card_row("Partitions", 3), "Create partition"))
        self.dialog_wait_open()
        b.wait_not_present("select option[value='dos-extended']")
        self.dialog_cancel()
        self.dialog_wait_close()

        # Delete it

        b.clicks(self.dropdown_action(self.card_row("Partitions", 2), "Delete"))
        self.confirm()

        b.wait_text(self.card_row_col("Partitions", 2, 1), "Free space")


if __name__ == '__main__':
    testlib.test_main()
