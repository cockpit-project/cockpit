import argparse
import os
import sys
import subprocess
import re

import testvm
import testinfra

parser = argparse.ArgumentParser(
    description='Run command inside or install packages into a Cockpit virtual machine')
parser.add_argument('-v', '--verbose', action='store_true',
                    help='Display verbose progress details')
parser.add_argument('-i', '--install', action='append',
                    dest="yumlist", default=[], help='Install packages')
parser.add_argument('-r', '--run-command', action='append', dest="commandlist",
                    default=[], help='Run command inside virtual machine')
parser.add_argument('image', nargs='?',
                    default=testinfra.DEFAULT_IMAGE, help='The image to use')
args = parser.parse_args()

current_image = args.image


def run_command(image):
    """Run command inside image"""
    machine = testvm.VirtMachine(
        verbose=args.verbose, image=image, label="install")
    machine.start(maintain=True)
    allcommands = []
    try:
        machine.wait_boot()
        for foo in args.commandlist:
            machine.message("Executing: " + foo)
            machine.execute(foo)
    finally:
        machine.stop()


def install_packages(image):
    """Install packages into a test image
    It could be done via local rpms or normal package installation
    """
    machine = testvm.VirtMachine(
        verbose=args.verbose, image=image, label="install")
    machine.start(maintain=True)
    allpackages = []
    try:
        machine.wait_boot()
        for foo in args.yumlist:
            if os.path.isfile(foo):
                pname = os.path.basename(foo)
                machine.upload([foo], "/var/tmp/" + pname)
                allpackages.append("/var/tmp/" + pname)
            elif not re.search("/", foo):
                allpackages.append(foo)
            else:
                machine.message("Bad package name or path: " + foo)
        if allpackages:
            machine.message("Installing: " + ' '.join(allpackages))
            machine.execute("yum install -y " + ' '.join(allpackages))
    finally:
        machine.stop()

run_command(current_image)
install_packages(current_image)
