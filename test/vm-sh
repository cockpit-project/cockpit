SELF=vm-sh
. ./testlib.sh

usage()
{
	echo >&2 "usage $SELF [--machine=addr] [CMD ...]"
}

M=10.111.111.1

case ${1:-} in
-m|--machine)
	if [ $# -lt 2 ]; then
		usage
		exit 2
	fi
	M=$2
	shift 2
	;;
--machine=*)
	M=${1#--machine=}
	shift
	;;
--help|-h)
	usage
	exit 0
	;;
esac

chmod 600 ./identity
ssh -i ./identity -p 22 -o StrictHostKeyChecking=no root@$M "$@"
