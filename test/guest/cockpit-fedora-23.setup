#! /bin/bash

set -ex

echo foobar | passwd --stdin root

# Let's not bother with SELinux until f23 is released.
#
# Known problems:
#   https://bugzilla.redhat.com/show_bug.cgi?id=1250842
#
setenforce 0
ln -sf ../selinux/config /etc/sysconfig/selinux
echo 'SELINUX=permissive' > /etc/selinux/config

# We install all dependencies of the cockpit packages since we want
# them to not spontaneously change from one test run to the next when
# the distribution repository is updated.
#
COCKPIT_DEPS="\
json-glib \
realmd \
glib-networking \
libssh \
selinux-policy-targeted \
docker \
pcp-libs \
pcp \
kubernetes \
etcd \
subscription-manager \
storaged \
storaged-lvm2 \
device-mapper-multipath \
atomic \
"

# We also install the packages necessary to join a FreeIPA domain so
# that we don't have to go to the network during a test run.
#
IPA_CLIENT_PACKAGES="\
freeipa-client \
oddjob \
oddjob-mkhomedir \
sssd \
"

TEST_PACKAGES="\
systemtap-runtime-virtguest \
valgrind \
gdb \
"

rm -rf /etc/sysconfig/iptables

maybe() { if type "$1" >/dev/null 2>&1; then "$@"; fi; }

# For the D-Bus test server
maybe firewall-cmd --permanent --add-port 8765/tcp

echo 'NETWORKING=yes' > /etc/sysconfig/network

useradd -u 1000 -c Administrator -G wheel admin
echo foobar | passwd --stdin admin

# Let's upgrade dnf first and then use the new dnf to upgrade
# the rest. This helps avoid things like:
#
#     https://bugzilla.redhat.com/show_bug.cgi?id=1211547
#
# Initially, we disable updates-testing since packages in
# updates-testing frequently have unsatisfied dependencies.  At the
# end, we try to update as far as possible towards updates-texting.

dnf -y --disablerepo=updates-testing upgrade dnf
dnf -y --disablerepo=updates-testing upgrade
dnf -y --disablerepo=updates-testing install $TEST_PACKAGES $COCKPIT_DEPS $IPA_CLIENT_PACKAGES
dnf -y --disablerepo=updates-testing reinstall docker-selinux

dnf -y upgrade

# HACK: docker falls over regularly, print its log if it does
systemctl start docker || journalctl -u docker

# docker images that we need for integration testing
docker pull busybox:latest
docker pull busybox:buildroot-2014.02
docker pull submod/helloapache
docker pull submod/atomicapp

# Final tweaks

rm -rf /var/log/journal/*
echo "kernel.core_pattern=|/usr/lib/systemd/systemd-coredump %p %u %g %s %t %e" > /etc/sysctl.d/50-coredump.conf
printf "[Coredump]\nStorage=journal\n" > /etc/systemd/coredump.conf

touch /.autorelabel

# Audit events to the journal
rm -f '/etc/systemd/system/multi-user.target.wants/auditd.service'
rm -rf /var/log/audit/
