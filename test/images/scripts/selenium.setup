set -ex

SELENIUM_DEPS="\
docker \
"

dnf -y upgrade
dnf -y install $SELENIUM_DEPS

dnf -y remove firewalld

# HACK: docker fails without /etc/resolv.conf
# https://bugzilla.redhat.com/show_bug.cgi?id=1448331
mkdir -p /etc/systemd/system/docker.service.d
printf "[Service]\nExecStartPre=/bin/sh -c 'echo -n >> /etc/resolv.conf'\n" > /etc/systemd/system/docker.service.d/resolv.conf
systemctl daemon-reload

# HACK: docker falls over regularly, print its log if it does
systemctl start docker || journalctl -u docker

systemctl enable docker

# docker images that we need for integration testing
docker pull selenium/hub:2.48.2
docker pull selenium/node-chrome:2.48.2
docker pull selenium/node-firefox:2.48.2

# reduce image size
dnf clean all
/var/lib/testvm/zero-disk.setup


